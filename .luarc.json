{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "diagnostics": {
    "libraryFiles": "Disable",
    "disable": ["lowercase-global"],
    "globals": [
      "MiniFiles",
      "MiniSnippets",
      "MiniSessions",
      "MiniBufremove",
      "MiniPick"
    ]
  },
  "workspace": {
    "checkThirdParty": false,
    "library": ["$VIMRUNTIME/lua", "lua"]
  }
}
